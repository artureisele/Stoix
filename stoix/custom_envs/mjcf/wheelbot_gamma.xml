<mujoco>
  <visual>
    <global offwidth="640" offheight="640"/>
  </visual>
  <option gravity="0 0 -9.81"/>
  <asset>
		<mesh name="body" file="mesh/mujoco_simplified_body.stl"/> 
    <mesh name="wheel_rim" file="mesh/wheel_rim.stl"/>
    <mesh name="o_ring" file="mesh/o_ring.stl"/>
    <mesh name="motor_rotor" file="mesh/motor_rotor.stl"/>
    <mesh name="body_shell" file="mesh/body_shell.stl"/>
    <mesh name="screws" file="mesh/screws.stl"/>
    <mesh name="stator_black" file="mesh/stator_black.stl"/>
    <mesh name="stator_grey" file="mesh/stator_grey.stl"/>
    <mesh name="stator_copper" file="mesh/stator_copper.stl"/>
    <mesh name="encoder" file="mesh/encoder.stl"/>
	</asset>
  <worldbody>
    <light diffuse=".9 .9 .9" pos="0 0 5" dir="0 0 -1"/>
    <geom name="ground" type="plane" size="5 5 0.1" rgba="0.4 0.4 0.4 1"/>
    <body name ="body" pos="0 0 .0645" euler="0 0 0">
      <inertial pos="0 0 0" mass="0.312" diaginertia="220e-6 190e-6 300e-6"/> 
      <site name = "imu_1" pos = "-0.0234 -0.0204 0.01939" euler="180 0 90" type="box" size="0.0045 0.003 0.00095"/>
      <site name = "imu_2" pos = "0.0234 0.0204 0.01939" euler="180 0 90" type="box" size="0.0045 0.003 0.00095"/>
      <site name = "imu_3" pos = "-0.016427 0.020172 -0.01889" euler="0 0 90" type="box" size="0.0045 0.003 0.00095"/>
      <site name = "imu_4" pos = "0.016368 -0.020481 -0.018916" euler="0 0 90" type="box" size="0.0045 0.003 0.00095"/>
      <joint type="free"/>
      <geom name="body_shell" type="mesh" mesh="body_shell" rgba="0.824 0.851 0.859 1"/>
      <geom name="screws" type="mesh" mesh="screws" rgba="0.5 0.5 0.5 1"/>
      <geom name="stator_black" type="mesh" mesh="stator_black" rgba="0 0 0 1"/>
      <geom name="stator_grey" type="mesh" mesh="stator_grey"/>
      <geom name="stator_copper" type="mesh" mesh="stator_copper" rgba="0.722 0.451 0.2 1"/>
      <geom name="encoder" type="mesh" mesh="encoder" rgba="0 0.5 0 1"/>
      <body name ="wheel1" pos="0 0 -0.0325" euler="0 0 -90">
        <inertial pos="0 0 0" mass="0.129" diaginertia="100e-6 53e-6 53e-6"/> 
        <joint name="w1" type="hinge" pos="0 0 0" axis="-1 0 0" damping="0.001"/>
        <geom name="wheel_1_rim" type="mesh" mesh="wheel_rim" rgba="0.655 0.529 0.078 1"/>
        <geom name="wheel_1_ring" type="mesh" mesh="o_ring" rgba="0 0 0 1"/>
        <geom name="wheel_1_rotor" type="mesh" mesh="motor_rotor" rgba="0 0 0 1"/>
      </body>
      <body name ="wheel2" pos="0 0 0.0325" euler="0 0 0">
        <inertial pos="0 0 0" mass="0.129" diaginertia="100e-6 53e-6 53e-6"/> 
        <joint name="w2" type="hinge" pos="0 0 0" axis="1 0 0" damping="0.0001"/>
        <geom name="wheel_2_rim" type="mesh" mesh="wheel_rim" rgba="0.655 0.529 0.078 1"/>
        <geom name="wheel_2_ring" type="mesh" mesh="o_ring" rgba="0 0 0 1"/>
        <geom name="wheel_2_rotor" type="mesh" mesh="motor_rotor" rgba="0 0 0 1"/>
      </body>
    </body>
    <!-- Overhead Camera-->
    <camera name="overhead" pos="0 0 3" quat="1 0 0 0" mode="fixed"/>
    <camera name="balancing_view" pos="0.000 -0.545 0.545" xyaxes="1.000 -0.000 0.000 0.000 0.707 0.707" mode="fixed"/>

    <!-- Wall 1: North -->
    <geom name="wall_north" type="box" pos="0 1 0.15" size="1.05 0.05 0.15" rgba="0.5 0.5 0.5 1" friction="1 0.1 0.1"/>
    <!-- Wall 2: South -->
    <geom name="wall_south" type="box" pos="0 -1 0.15" size="1.05 0.05 0.15" rgba="0.5 0.5 0.5 1" friction="1 0.1 0.1"/>
    <!-- Wall 3: East -->
    <geom name="wall_east" type="box" pos="1 0 0.15" size="0.05 0.95 0.15" rgba="0.5 0.5 0.5 1" friction="1 0.1 0.1"/>
    <!-- Wall 4: West -->
    <geom name="wall_west" type="box" pos="-1 0 0.15" size="0.05 0.95 0.15" rgba="0.5 0.5 0.5 1" friction="1 0.1 0.1"/>
  </worldbody>
  <actuator>
    <motor name="motor_1" joint="w1" gear="1" ctrlrange="-0.5 0.5"/>
    <motor name="motor_2" joint="w2" gear="1" ctrlrange="-0.5 0.5"/>
  </actuator>
  <sensor>
    <accelerometer name="acc_1" site="imu_1"/>
    <accelerometer name="acc_2" site="imu_2"/>
    <accelerometer name="acc_3" site="imu_3"/>
    <accelerometer name="acc_4" site="imu_4"/>

    <gyro name="gyr_1" site="imu_1"/>
    <gyro name="gyr_2" site="imu_2"/>
    <gyro name="gyr_3" site="imu_3"/>
    <gyro name="gyr_4" site="imu_4"/>

    <actuatorpos name="motor_1_pos" actuator="motor_1"/>
    <actuatorpos name="motor_2_pos" actuator="motor_2"/>
  </sensor>
</mujoco>
